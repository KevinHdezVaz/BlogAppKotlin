<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/arriba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Formutodo"
                    android:textAlignment="center"

                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:id="@+id/msjResultado"

                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans_bold"

                android:textColor="@color/black_white"
                android:layout_height="wrap_content"

                android:text="¡Descubre nuestra nueva aplicación revolucionaria para hacer las tareas diarias de manera más eficiente y sencilla! \n\nCon nuestras herramientas innovadoras, olvídate de la complejidad y el aburrimiento de las tareas cotidianas."

                android:textAlignment="center"
                android:textSize="15dp"


                app:layout_constraintBottom_toTopOf="@+id/botonvamo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardd" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonvamo"
                android:layout_width="234dp"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                app:backgroundTint="@color/white_white"

                android:layout_height="52dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="24dp"
                  android:text="VER MÁS"
                android:textColor="@android:color/black"
                 app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.cardview.widget.CardView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/cardd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/arriba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

            <ImageView
                android:id="@+id/giff"
                android:layout_width="350dp"
                 android:layout_height="350dp"

               >

            </ImageView>

                </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>